{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work History" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <div class="form-check">
                        <input class="form-check-input" type="radio">
                        <label class="form-check-label">
                            {{position}}
                        </label>
                    </div>
                    <br>
                    <div>
                        {{duration.from}} -
                        {{#if duration.to}}
                        {{duration.to}}
                        {{else}} (досi працюю)
                        {{/if}}
                    </div>
                    <br>
                    <div>
                        {{#if company.url}}
                        <div class="form-check">
                            <input class="form-check-input" type="radio">
                            <label class="form-check-label">
                                {{> link text=company.name href=company.url blank=truy noLine=true}}
                            </label>
                        </div>
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}
                    </div>
                    <br>
                    <br>
                    <div>
                        <strong>Projects ({{projectAmount }})</strong>
                    </div>
                    <br>
                    <ul>
                        {{#each projects}}
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio">
                                <label class="form-check-label">
                                    {{> link text=name href=url blank=truy noLine=true}}
                                </label>
                            </div>
                        </div>
                        <br>
                        <div>
                            <p>{{about}}</p>
                        </div>
                        <br>
                        <div>
                            <em>Project stacks ({{stackAmount}})</em>
                        </div>
                        <br>
                        <div>
                            <ul>
                                {{#each stacks}}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        {{name}}
                                    </label>
                                </div>
                                {{/each}}
                            </ul>
                        </div>
                        <br>
                        <div>
                            <em>Project awards ({{awardAmount}})</em>
                        </div>
                        <br>
                        <div>
                            <ul>
                                {{#each awards}}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        {{name}}
                                    </label>
                                </div>
                                {{/each}}
                            </ul>
                        </div>
                        {{/each}}
                    </ul>
                    <br>
                    {{/each}}
                </ul>
        </section>
    </main>
    {{/with}}
</div>
