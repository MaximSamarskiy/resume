{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main class="p-4">
    <section>
        <div>
            {{#with navigation}}
            <div class="row">
                <div class="card p-3">
                    <div class="col-12">
                        <ul class="nav ">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contacts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Help</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Exit</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </section>
    <div class="pt-5"></div>
    <section>

        <div class="display-4 text-center">{{header}}</div>
        <div class="pt-4"></div>
        {{#with contacts_data}}
        <h4 class="pb-3">{{title}}</h4>
        <button type="button" class="btn btn-warning text-light">Я новий покупець</button>
        <button type="button" class="btn btn-outline-warning">Я постійний покупець</button>

        </div>
        {{#with form}}
        {{#with input}}
        <div class="row pt-3">
            <div class="col-8">
                {{#with surname}}
                <div class="row">
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with name}}
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with phone}}
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                </div>
                {{/with}}
                {{/with}}
                <hr>
                <div class="col-8">
                    {{#each switch}}
                    <div class="form-check form-switch pt-4">
                        <input class="form-check-input" name="{{isActive}}" type="checkbox">
                        <label class="form-check-label">{{text}}</label>
                    </div>
                    {{/each}}
                    <br>
                    <hr>
                </div>
            </div>
            {{/with}}
            {{/with}}
            <div class="col-3">
                <div class="card">
                    <div class="card-body ">
                        {{#each action_block}}
                        <div class="d-grid gap-2 col-4 pb-2">
                            {{#if isSuccess}}
                            <button class="btn btn-success" type="button">{{text}}</button>
                            {{/if}}
                            {{#if isDanger}}
                            <button class="btn btn-danger" type="button">{{text}}</button>
                            {{/if}}
                            {{#if isInfo}}
                            <button class="btn btn-info" type="button">{{text}}</button>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{#with total}}
                <div class="row">
                    <div class="col-3 pt-3">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                {{#each item_list}}
                                {{#if name}} {{#if price}}
                                <p class="card-text">{{name}} {{price}}</p>
                                {{/if}}{{/if}}
                                {{/each}}
                                <hr>
                                {{#each additional_info}}
                                <p class="card-text">
                                    {{#if text}}{{text}}{{/if}}
                                    {{#if value}}{{value}}{{/if}}</p>
                                {{/each}}
                                <hr>
                                {{#with total_price}}
                                {{text}} {{value}}
                                {{/with}}
                                <hr>
                                {{#each button}}
                                {{#if isPrimary}}
                                <div class="pb-2">
                                    <button type="button " class="btn btn-primary">{{text}}</button>
                                </div>
                                {{/if}}
                                {{#if isOutline}}
                                <button type="button" class="btn btn-outline-primary">{{text}}</button>
                                {{/if}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </section>
    <section>
        </div>
        {{#with delivery}}
        <h3>{{title}}</h3>
        <div class="row">
            {{#each select}}
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{#each delivery_type}}
        <div class="mt-3"></div>
        <div class="form-check">
            <input class="form-check-input" type="radio">
            <label class="form-check-label">
                {{type}}
            </label>
        </div>
        {{/each}}
        <hr>
        {{#with payment}}
        <h3>{{title}}</h3>
        {{#each list}}

        <div class="form-check">
            <input class="form-check-input" type="radio">
            <label class="form-check-label">
                {{type}} <p>{{description}}</p>
            </label>
        </div>

        {{/each}}
        {{/with}}
        <hr>
        {{#with contact}}
        <h4>{{title}}</h4>
        <div class="row pt-3">
            <div class="col-8">
                {{#with surname}}
                <div class="row">
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with name}}
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with phone}}
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-6">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                </div>
                {{/with}}
                {{/with}}
                <hr>
                {{#with coment}}
                {{label}}
                <input class="form-control" type="text" placeholder="{{placeholder}}">
                {{/with}}
                <hr>
                {{/with}}
                {{#with coupon}}
                <h3>{{title}}</h3>
                {{#with select}}
                {{#with availabel_coupon}}
                {{label}}
                <select class="form-select form-select-lg" aria-label="Default select example">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
                {{#with friend_coupon}}
                <div class="pt-3">
                    {{label}}
                    <select class="form-select form-select-sm" aria-label="Default select example">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    <div class="form-text text-danger">Caption text, description, error notification</div>
                </div>
                {{/with}}
                {{/with}}
                {{#with add}}
                {{#with friend}}
                <div class="pt-3">
                    {{label}}
                    <input class="form-control form-control-lg" type="text" placeholder="{{placeholder}}">
                    <div class="form-text text-danger">{{caption}}</div>
                </div>
                {{/with}}
                {{#with colleague}}
                <div class="col-10 pt-3">
                    {{label}}
                    <input class="form-control form-control-sm" type="text" placeholder="{{placeholder}}">
                    <div class="form-text text-danger">{{caption}}</div>
                </div>
                {{/with}}
                {{/with}}
                {{/with}}
                <hr>
                {{#with quiz}}
                <h3>{{title}}</h3>
                {{#with preference}}
                <div class="pt-2">
                    {{title}}
                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="radio">
                        <label class="form-check-label">
                            {{this}}
                        </label>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
                {{#with your_expirience}}
                <div class=" pt-3"></div>
                {{label}}
                <input class="form-control form-control" type="text">
            </div>
            {{/with}}
            {{#with purchase_frequency}}
            <div class="col-8 pt-3">
                {{label}}
                <select class="form-select form-select-sm" aria-label="Default select example">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}
            <div class="pt-3">
                {{#with factors}}
                {{title}}
                {{#each options}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">
                        {{this}}
                    </label>
                </div>
                {{/each}}
                {{/with}}
            </div>
            {{/with}}
    </section>
    <div class="pb-3"></div>
    <hr>
    <footer class="mt-3">
        <div class="row">
            {{#each footer}}
            <section class="col-2">
                <ul class="nav">
                    {{#each this}}
                    <li class="nav-item">
                        {{#if @last}}
                        <a class="nav-link disabled" href="#">{{this.text}}</a>
                        {{else}}
                        <a class="nav-link" href="{{this.link}}">{{this.text}}</a>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </section>
            {{/each}}
        </div>
    </footer>
</main>


