{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            <div class="row">
                <div class="card m-3">
                    <div class="col-6 p-5">
                        {{> title data="My Education" big=true}}
                        <div class="card p-2">
                            <ul>
                                {{#each educations}}
                                <li>
                                    {{name}}
                                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                                    {{#if isEnd}} (TOP) {{/if}}
                                    {{#unless isEnd includeZero=true}} (ще в процесі) {{/unless}}
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        {{> title data= "My Certificates"}}
                        <div class="card p-2">
                            <ul>
                                {{#each certificates}}
                                <li>{{name}}</li>
                                ({{id}})
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    {{/with}}
</div>
