{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <div>
        <h1>{{name}}</h1>
        <p><strong>Age: {{age}}</strong></p>
        <p>Gender: <strong> {{gender}}</strong></p>

        {{#with address}}
        <p>Address:
            <strong>{{street}} {{city}} {{state}} {{zip}} {{country}}</strong>
        </p>
        {{/with}}
        <hr>
        <br>
        <hr>
        <div>
            <main>
                <section>
                    <h1><u>Education:</u></h1>
                    <div>
                        <ul>
                            {{#each education}}
                            <li>
                                <div>Degree:<strong>{{degree}}</strong></div>
                            </li>
                            <br>
                            <li>
                                <div>Major:<strong>{{major}}</strong></div>
                            </li>
                            <br>
                            <li>
                                <div>University:<strong>{{university}}</strong></div>
                            </li>
                            <br>
                            <li>
                                <div>graduationYear:{{graduationYear}}</div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </section>
                <hr>
                <section>
                    <h1><u>Work Experience:</u></h1>
                    <div>
                        <ul>
                            {{#each workExperience}}

                            <li>
                                <div>Company:<b>{{company}}</b></div>
                            </li>
                            <br>
                            <li>
                                <div>Title:<b>{{title}}</b> &nbsp &nbsp &nbsp {{startDate}} - {{endDate}}</div>
                            </li>
                            <br>
                            <li>
                                <div>responsibilities:<u><mark>{{responsibilities}}</mark></u></div>
                            </li>
                            <br>
                            <li>
                                <div>Year founded:({{year_founded}}) - Industry:<b>{{"industry"}}</b></div>
                            </li>
                            <hr>
                    </div>
                    </li>
                    <br>
                    <h3>Employees:</h3>
                    <div>
                        <ul>
                            {{#each employees}}
                            <li>
                                <div> Name: <b>{{name}}</b></div>
                            </li>
                            <br>
                            Position: <b>{{position}}</b>
                            <br>
                            <br>
                            Department: <b>{{department}}</b>
                        </ul>
                    </div>
                    <h3>Projects:</h3>
                    <div>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>Name:<b>{{name}}</b></div>
                            </li>
                            <br>
                            Description: <b>{{ description}}</b>
                            <br>
                            <br>
                            Status: <b>({{status}})</b>
                        </ul>
                    </div>
                    <h4>Teams:</h4>
                    <div>
                        <ul>
                            {{#each teams}} Team Name: <b>"{{team_name}}"</b>
                            <br>
                            <br>
                            <li><b>{{team_leader.name}}</b>, {{team_leader.title}}</li>
                            <br>
                            Email: {{> link href=team_leader.email text='john.smith@example.com' noLine=true}}
                        </ul>
                        <br>
                        <h4>Team Members:</h4>
                        <div>
                            <ul>
                                {{#each team_members}}
                                <li>
                                    <b>{{name}}</b>, {{title}}
                                    <br>
                                    <br>
                                    Email: {{> link href=team_leader.email text='alice.johnson@example.com'
                                    noLine=true}}
                                    <br>
                                    <br>
                                    <b>Skills: [{{skills}}]</b>
                                </li>
                            </ul>
                        </div>
                        <br>
                        <h2><b>Projects:</b></h2>
                        <div>
                            <ul>
                                {{#each projects}}
                                <li>
                                    Name: "{{name}}"
                                    <br>
                                    <br>
                                    Description: <u>{{description}}</u>
                                    <br>
                                    <br>
                                    <b>Tehnologies: [{{technologies}}]</b>
                                </li>
                            </ul>
                        </div>
                        <br>
                        <h3>"Team Members":</h3>
                        <div>
                            <ul>
                                {{#each team_members}}
                                <li>
                                    Name: <b>{{name}}</b>, {{title}}
                                </li>
                            </ul>
                        </div>
                    </div>
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    </ul>
        </div>
        </section>
        </main>
    </div>
</div>
{{/with}}
</div>

