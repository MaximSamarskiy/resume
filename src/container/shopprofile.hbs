<main class="p">
    <section>
        {{#with navigation}}
        <div class="card m-o">
            <ul class="nav">
                {{#each links}}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page">{{text}}</a>
                </li>
                {{/each}}
                <li class="nav-item">
                    <a class="nav-link disabled">Disabled</a>
                </li>
            </ul>
        </div>
        {{/with}}
    </section>
    <section>
        <h2>{{header}}</h2>
        {{#with purchase}}
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="#">Всі замовлення</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled">Гарантія та повернення</a>
            </li>
        </ul>
        {{#with actionBlock}}

        <div class="row p-3">
            <div class="col-3">
                {{#with input}}
                <button type="button" class="btn btn-outline-secondary">{{placeholder}}</button>
                {{/with}}
            </div>
            {{#each buttons}}
            {{#if isSuccess}}
            <div class="col-3">
                <button type="button" class="btn btn-success">{{text}}</button>
            </div>
            {{/if}}
            {{#if isOutline}}
            <div class="col-3">
                <button type="button" class="btn btn-outline-success">{{text}}</button>
            </div>
            {{/if}}
            {{#if isDanger}}
            <div class="col-3">
                <button type="button" class="btn btn-outline-danger">{{text}}</button>
            </div>
            {{/if}}
            {{/each}}
        </div>
        {{/with}}
        {{#each itemList}}
        <div class="row ">
            <div class="col-3 ">
                <p>{{number}}</p>
                <h5>{{status}}</h5>
            </div>
            <div class="col-2">
                {{#with amount}}
                <p>{{title}}</p>
                <h5>{{value}}</h5>
                {{/with}}
            </div>
            <div class="col-6">
                {{#each images}}
                <img src="{{this}}" alt="image" class="p-1">
                {{/each}}
            </div>
            <div class="col-1">
                {{#with button}}
                {{#if isPrimary}}
                <a href="{{link}}" class="btn btn-primary text-light m-4">{{text}}</a>
                {{/if}}
            </div>
            {{/with}}
        </div>
        </div>
        {{/each}}
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with userInfo}}
        <div class="mt-3">
            <h3>{{title}}</h3>
            <div class="row pt-3">
                <div class="card">
                    {{#with profileData}}
                    <h4 class="p-3">{{title}}</h4>
                    {{#with fullName }}
                    <div class="alert alert-light" role="alert">
                        <div class="row">
                            {{#with surname}}
                            <div class="col-4">
                                <h4>{{title}}</h4>
                                <h3>
                                    <p><b>{{value}}</b></p>
                                </h3>
                            </div>
                            {{/with}}
                            {{#with name}}
                            <div class="col-4">
                                <h4>{{title}}</h4>
                                <h3>
                                    <p><b>{{value}}</b></p>
                                </h3>
                            </div>
                            {{/with}}
                            {{#with middleName}}
                            <div class="col-4">
                                <h4>{{title}}</h4>
                                <h3>
                                    <p><b>{{value}}</b></p>
                                </h3>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                    {{#with otherInfo}}
                    <div class="alert alert-light" role="alert">
                        <div class="row">
                            {{#with birthday}}
                            <div class="col-4">
                                <h4>{{title}}</h4>
                                <h3>
                                    <p><b>{{value}}</b></p>
                                </h3>
                            </div>
                            {{/with}}
                            {{#with sex}}
                            <div class="col-4">
                                <h4>{{title}}</h4>
                                <h3>
                                    <p><b>{{value}}</b></p>
                                </h3>
                            </div>
                            {{/with}}
                            {{#with language}}
                            <div class="col-4">
                                <h4>{{title}}</h4>
                                <h3>
                                    <p><b>{{value}}</b></p>
                                </h3>
                            </div>
                            {{/with}}
                            {{/with}}
                            {{/with}}
                        </div>
                    </div>
                </div>
                <div class="alert alert-light" role="alert">
                    <div class="row">
                        {{#each buttons}}
                        <div class="col-4">
                            {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary text-light m-4">{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-outline-secondary m-4">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                            <a href="{{link}}" class="btn btn-outline-danger m-4">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{#with recipients}}
        <div class="card p-3">
            <h3 class="p-3">{{title}}</h3>
            <li class="list-group-item">
                <div class="row p-3">
                    {{#each users}}
                    <div class="col-5">
                        <div class="card">
                            <h3>{{name}}</h3>
                            <p><b>{{phone}}</b></p>
                            <div class="col-4 pb-3">
                                {{#with button}}
                                <button type="button" class="btn btn-primary">{{text}}</button>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </li>
        </div>
        {{/with}}
        {{#with contacts}}
        <div class="card p-3">
            <h3 class="p-3">{{title}}</h3>
            <li class="list-group-item">
                <div class="row p-3">
                    {{#each contactData}}
                    <div class="col-4">
                        <div class="card">
                            <h3>{{title}}</h3>
                            <p><b>{{value}}</b></p>
                            <div class="col-4 pb-3">
                                {{#with button}}
                                {{#if isPrimary}}
                                <a href="{{link}}" class="btn btn-primary m-4">{{text}}</a>
                                {{/if}}
                                {{#if isSecondary}}
                                <a href="{{link}}" class="btn btn-outline-secondary m-4">{{text}}</a>
                                {{/if}}
                                {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-outline-danger m-4">{{text}}</a>
                                {{/if}}
                                {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </li>
        </div>
        {{/with}}
        {{/with}}
    </section>
    <hr>
    <section>
        <footer class="mt-3">
            <div class="row">
                {{#each footer}}
                <section class="col-2">
                    <ul class="nav">
                        {{#each this}}
                        <li class="nav-item">
                            {{#if @last}}
                            <a class="nav-link disabled" href="#">{{this.text}}</a>
                            {{else}}
                            <a class="nav-link" href="{{this.link}}">{{this.text}}</a>
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </section>
                {{/each}}
            </div>
        </footer>
    </section>
</main>