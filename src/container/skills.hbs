<div>
    {{#with main}}
    <main>
        <section>
            <div class="card p-5 bg-info">
                {{> title data="All Skills" big=true }}
                <div class="row">
                    <div class="col-6">
                        <div class="card p-3">
                            {{#each skills}}
                            <div class="form-check">
                                <input class="form-check-input" type="radio">
                                <label class="form-check-label">
                                    {{name}}
                                    {{#if point includeZero=true}}({{point}}) {{/if}}
                                    {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
                                    {{#unless point}}
                                    {{#if point includeZero=true}} (зараз вивчаємо) {{/if}}
                                    {{/unless}}
                                </label>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-6 p-3">
                        <div class="card p-2">
                            {{#each hobbies}}
                            <div class="form-check">
                                <input class="form-check-input" type="radio">
                                <label class="form-check-label">
                                    {{name}} ({{isMain}})
                                </label>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    {{/with}}
</div>