<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="All Skills" big=true }}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (TOP) {{/if}}
                    {{#unless point includeZero=true}} (не вивчаемо) {{/unless}}
                    {{#unless point}}
                    {{#if point includeZero=true}}
                    (зараз вивчаемо)
                    {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data= "My Hobbies"}}
            <ul>
                {{#each hobbies}}
                <li>
                    {{name}} {{#if isMain includeZero=true}} (favourite) {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>