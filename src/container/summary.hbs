{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    {{#with main}}
    <main>
        <div class="row">
            <div class="card bg-primary">
                <section>
                    <div class="card p-3">
                        {{> title data=summary.title big=true}}
                        <div>
                            <p>
                                {{summary.text}}
                            </p>
                        </div>
                    </div>
                </section>
                {{#with experience}}
                <section>
                    <div class="card p-3">
                        <div>
                            {{> title data=title}}
                            <div>
                                <p>
                                    {{text}}
                                </p>
                            </div>
                        </div>
                </section>
            </div>
        </div>
        {{/with}}
    </main>
    {{/with}}
</div>
