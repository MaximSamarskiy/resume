<main class="p-3">
    <section>
        {{#with navigation}}
        <div class="card m-o">
            <ul class="nav">
                {{#each links}}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page">{{text}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        <div class="row">
            <div class="col-8">
                {{#with formBlock}}
                <h1 class="pt-3">{{header}}</h1>
                {{#with rating}}
                <b>{{title}} {{value}}</b>
                {{/with}}
                {{#with actionBlock}}
                {{#each tabs}}
                <div class="col-2">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="#">{{text}}</a>
                        </li>
                        {{#if isAction}}
                        <li class="nav-item">
                            <a class="nav-link disabled">{{text}}</a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
                {{/each}}
                <hr>
                {{#with report}}
                <div class="p-4">
                    <div class="card">
                        <b class="pt-5">{{title}}</b>
                        {{#with button}}
                        <div class="col-5 p-3 ">
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
                {{/with}}
                <hr>
                {{#with feedbackBlock}}
                <h3 class="p-3">
                    <b>{{title}}</b>
                </h3>
                {{#each buttons}}
                {{#if isWarning}}
                <a href="{{link}}" class="btn btn-warning text-light">{{text}}</a>
                {{/if}}
                {{#if isSuccess}}
                <a href="{{link}}" class="btn btn-success">{{text}}</a>
                {{/if}}
                {{#if isDanger}}
                <a href="{{link}}" class="btn btn-danger">{{text}}</a>
                {{/if}}
                {{/each}}
                {{/with}}
            </div>
            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card">
                    <div class="card-body">
                        <img class="col-8" src="{{photo}}">
                        <p>
                        <h3>{{name}}</h3>
                        </p>
                    </div>
                </div>
                <div class="p-2">
                    <div class="card">
                        <h3 class="p-2">
                            {{price}}
                            <p>{{inMarket}}</p>
                        </h3>
                        {{#each buttons}}
                        <div class="col-8 p-1">
                            {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{#with seller}}
                <div class="card">
                    <h4 class="p-2">{{title}} <b>{{value}}</b></h4>
                </div>
                {{/with}}
                {{/with}}

            </div>
            {{/with}}
        </div>
        <br>
        <hr>
    </section>
    <section>

        {{#each reviewList}}
        <div class="p-3">
            <div class="card">
                <div class="p-3">
                    {{#with title}}
                    <div class="card p-2">
                        <div class="card-header">
                            <h3>{{userName}}</h3>
                            <p><b>{{caption}}</b></p>
                            {{date}}
                        </div>
                        {{/with}}
                        {{#with reviewBody}}
                        <div class="card-body">
                            {{#with seller}}
                            <h5 class="card-title">{{title}} <b>{{value}}</b></h5>
                            {{/with}}
                            {{#with racing}}
                            {{title}} <b>{{value}}</b>
                            {{/with}}
                            {{#each text}}
                            <p class="card-text">{{this}}</p>
                            {{/each}}
                            {{#with advantages}}
                            <b>{{title}}</b>
                            <p>{{text}}</p>
                            {{/with}}
                            {{#with disadvantages}}
                            <b>{{title}}</b>
                            <p>{{text}}</p>
                            {{/with}}
                            {{#each images}}
                            <img src="{{this}}">
                            {{/each}}
                        </div>
                    </div>
                    {{#each coments}}
                    <div class="col-10 p-2">
                        <div class="card ms-5">
                            <h3 class="p-2"> {{userName}}</h3>
                            {{date}}
                            {{text}}
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>
        {{/each}}
    </section>
    <section>
        {{#with service}}
        <div class="p-3">
            <div class="card text-bg-success text-center p-2">
                <h2>{{title}}</h2>
                {{description}}
                {{#each buttons}}
                <div class="col-12 p-3">
                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        <footer class="mt-3">
            <div class="row">
                {{#each footer}}
                <section class="col-2">
                    <ul class="nav">
                        {{#each this}}
                        <li class="nav-item">
                            {{#if @last}}
                            <a class="nav-link disabled" href="#">{{this.text}}</a>
                            {{else}}
                            <a class="nav-link" href="{{this.link}}">{{this.text}}</a>
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </section>
                {{/each}}
            </div>
        </footer>
    </section>
</main>