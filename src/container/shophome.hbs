<main class="p-4">
    <section>
        <div class="col-12">
            {{#with navigation}}
            <div class="card m-o">
                <ul class="nav">
                    {{#each links}}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{href}}">{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
            </div>
            {{/with}}
        </div>
    </section>
    <section>
        {{#with newsBlock}}
        <b>
            <div class="text-center">{{title}}</div>
        </b>
        <br>
        <div class="row">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark mb-3" style="max-width: 18rem;">
                    <div class="text-end">
                        {{#if this}}
                        <span class="badge text-bg-success rounded-pill">{{isNew}}</span>
                        {{/if}}
                        {{#if this}}
                        <span class="badge text-bg-danger rounded-pill">{{isTop}}</span>
                        {{/if}}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with goodsBlock}}
        <div class="row">
            <section class="col-12">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Electronics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home & Kitchen</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Clothing & Accessories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Toys & Games</a>
                    </li>
            </section>
        </div>
        </ul>
        <div>
            <div class="row mt-4">
                {{#each cards}}
                <div class="col-4 mb-2">
                    <div class="card" style="width: 18rem;">
                        <img src="{{image}}" class="card-img-top">

                        <div class="card-body">
                            {{title}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill btn-sm">{{isHot}}</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill btn-sm">{{isNew}}</span>
                            {{/if}}
                            <p class="card-text">{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        <div>
            <div class="col-12 mt-5">
                {{#with subscribe}}
                <div class="alert alert-dark">
                    <h2>{{header}}</h2>
                    {{description}}
                    {{#each buttons}}
                    <div class="pt-4">
                        {{#if buttons}}
                        <p><button type="button" class="btn btn-primary" link="{{link}}">{{text}}</button></p>
                        {{/if}}
                        {{#if this}}
                        <p><button type="button" class="btn btn-primary btn-lg" link="{{link}}">{{text}}</button></p>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
    </section>
    <hr>
    <section>
        <div>
            <div class="mt-4">
                {{#with service}}
                <div class="alert alert-success text-center pb-3">
                    <h2>{{title}}</h2>
                    {{description}}
                    {{#each buttons}}
                    <p><button type="button" class="btn btn-primary" link="{{link}}">{{text}}</button></p>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
    </section>
    <hr>
    <section>
        <footer class="mt-3">
            <div class="row">
                {{#each footer}}
                <section class="col-2">
                    <ul class="nav">
                        {{#each this}}
                        <li class="nav-item">
                            {{#if @last}}
                            <a class="nav-link disabled" href="#">{{this.text}}</a>
                            {{else}}
                            <a class="nav-link" href="{{this.link}}">{{this.text}}</a>
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </section>
                {{/each}}
            </div>
        </footer>
    </section>

</main>